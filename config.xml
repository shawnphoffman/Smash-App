<?xml version='1.0' encoding='utf-8'?>
<widget id="com.shawnphoffman.smash-app"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Smash App</name>

    <description>
        An unofficial companion application for the popular card game, Smash Up.
        Smash App is capable of randomizing faction selection as well as score-keeping.
    </description>

    <author email="shawn.p.hoffman@gmail.com" href="http://www.shawnphoffman.com">
        Shawn Hoffman
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <content src="index.html" />

    <access origin="*" />

    <preference name="ios-statusbarstyle"       value="black-opaque" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
</widget>
